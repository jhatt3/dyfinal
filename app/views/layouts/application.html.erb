<!DOCTYPE html>
<html>
  <head>
    <title>Dyfinal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Eczar|Lora:700|Roboto+Slab" rel="stylesheet">   </head>

  <body>
    <div class="container jumbo">
      <div class="jumbotron">
        <h1><span>Drop Yard</span></h1>
        </div>
      </div>
    </div>
    <div class="header-search">
        <nav class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Drop Yard</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="#">Login</a></li>
                    <li><a href="#">Sign Out</a></li>
                    <li><a href="#">Sign Up</a></li>                   
                </ul>
                <div class="col-sm-3 col-md-3 pull-right">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="q">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>        
            </div>
        </nav>
      </div>
      <div id="wrapper" class="">
                <div  class="open">
                  <span class="cls"></span>
                  <span>
                    <ul class="sub-menu ">
                      <li>
                        <%= link_to "Home", contacts_path, class: "home" %>
                      </li>
                      <li>
                        <%= link_to 'New Contact', new_contact_path, class: 'new' %>
                      </li>
                      <li>
                        <a href="#jobs" title="tellus">Tell Us...</a>
                      </li>
                      <li>
                        <%= link_to "Help", help_path, class: "help" %>
                      </li>
                    </ul>
                  </span>
                  <span class="cls"></span>

              </div>
              <div class="content-container">
                  <%= yield %>
              </div>

              <div class="map"></div>
              
            </div>
            <footer class="footer">
                <div class="grid">
                  <div class="left">
                    <div class="social">
                      <ul>
                        <li>Facebook</li>
                        <li>Twitter</li>
                        <li>Github</li>
                      </ul>
                    </div>
                  </div>
              
                  <div class="center"></div>
              
                  <div class="right">
                    <div class="legal">
                      <ul>
                        <li><p>&copy; 2018. All Rights Reserved</p></li>
                        <li><p></p></li>
                        <li>Created by:&nbsp;  <a href="mailto://odloads@live.com">Jesse Hatton</a></li>
                      </ul>
                    </div>
                  </div>
              </div>
              </footer>


  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= Figaro.env.google_api_key %>"></script>
  </body>
</html>
